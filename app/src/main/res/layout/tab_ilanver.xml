<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >


            <LinearLayout android:id="@+id/thumbnail"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/image_bg"
                android:layout_marginRight="5dip"
                android:layout_alignTop="@+id/details">

                <ImageView
                    android:id="@+id/list_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/noimage"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton"
                    android:background="@drawable/action_search_32"
                    android:layout_below="@+id/thumbnail"
                    android:layout_alignLeft="@+id/thumbnail"
                    android:layout_alignStart="@+id/thumbnail"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" />

            </LinearLayout>

            <LinearLayout android:id="@+id/details"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"


                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/thumbnail"
                android:layout_toStartOf="@+id/thumbnail">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilanver_et_baslik"
                    android:hint="Başlık"

                    android:layout_marginTop="10dip"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilanver_et_aciklama"
                    android:hint="Açıklama"
                    android:layout_below="@+id/ilanver_et_baslik"


                    android:layout_marginTop="10dip"
                     />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilanver_et_iletisim"
                    android:hint="İletişim Bilgileri"
                    android:layout_below="@+id/ilanver_et_aciklama"

                    android:layout_marginTop="10dip"
                     />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilanver_et_tarih"
                    android:hint="Tarih"
                    android:layout_below="@+id/ilanver_et_iletisim"

                    android:layout_marginTop="10dip"
                     />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilanver_et_konum"
                    android:hint="Konum"
                    android:layout_below="@+id/ilanver_et_tarih"

                    android:layout_marginTop="10dip"
                     />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilanver_spn_kayipturu"
                    android:layout_marginTop="10dip"
                    android:layout_below="@+id/ilanver_et_konum"

                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilanver_spn_ilanturu"
                    android:layout_marginTop="10dip"
                    android:layout_below="@+id/ilanver_spn_ilanturu"
                    />

            </LinearLayout>




        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        android:id="@+id/ilanver_btn_kaydet"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İptal"
        android:id="@+id/ilanver_btn_iptal"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignTop="@+id/ilanver_btn_kaydet"
        android:layout_toRightOf="@+id/ilanver_btn_kaydet"
        android:layout_toEndOf="@+id/ilanver_btn_kaydet" />

</RelativeLayout>
