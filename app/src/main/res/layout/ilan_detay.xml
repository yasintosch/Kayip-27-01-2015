<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >




            <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/ilan_detay_list_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />


            <LinearLayout android:id="@+id/ilan_detay_details"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/linearlayout_bg"
                android:layout_below="@+id/ilan_detay_list_image">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilan_detay_baslik"
                    android:text="Başlık"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_top_bg"
                    android:layout_marginTop="15dip"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilan_detay_aciklama"
                    android:text="Açıklama"
                    android:layout_gravity="center"
                    android:layout_below="@+id/ilan_detay_baslik"
                    android:background="@drawable/edittext_default_bg"

                    android:layout_marginTop="5dip"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilan_detay_iletisim"
                    android:text="İletişim Bilgileri"
                    android:layout_gravity="center"
                    android:layout_below="@+id/ilan_detay_aciklama"
                    android:background="@drawable/edittext_default_bg"
                    android:layout_marginTop="5dip"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilan_detay_tarih"
                    android:text="Tarih"
                    android:layout_gravity="center"
                    android:layout_below="@+id/ilan_detay_iletisim"
                    android:background="@drawable/edittext_default_bg"
                    android:layout_marginTop="5dip"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ilan_detay_konum"
                    android:text="Konum"
                    android:layout_gravity="center"
                    android:layout_below="@+id/ilan_detay_tarih"
                    android:background="@drawable/edittext_default_bg"
                    android:layout_marginTop="5dip"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Kayip Türü"
                    android:background="@drawable/edittext_default_bg"
                    android:id="@+id/ilan_detay_kayipturu"
                    android:layout_below="@+id/ilan_detay_konum"
                    android:layout_marginTop="5dip"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="İlan Türü"
                    android:background="@drawable/edittext_default_bg"
                    android:layout_below="@+id/ilan_detay_kayipturu"
                    android:layout_marginTop="5dip"
                    android:id="@+id/ilan_detay_ilanturu" />

            </LinearLayout>




        </RelativeLayout>


</RelativeLayout>
